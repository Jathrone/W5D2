<!DOCTYPE html>
<html>
  <head>
    <title>RedditLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header> 
      <% if logged_in? %>
        <ul>

          <li><h3>Welcome Back Reddituhlitor <strong style="color: blue;"><%= current_user.username %></strong></h3></li> 
          <li><a href="<%=new_sub_url%>">Create a sub!</a></li>
          <li><a href="<%= subs_url %>">All Subs</a></li>
          <li><form action="<%=session_url%>" method="post">
            <%= auth_token %>
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Log Out">
          </form></li> 
        
        </ul>
      <% else %>
        <a href="<%= new_session_url %>">Log In</a>
        <a href="<%= new_user_url %>">Sign Up</a>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
