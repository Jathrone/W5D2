<h1><%= @sub.title %></h1>
<br>
<h4>Description</h4>
<p><%= @sub.description%></p>
<br>

<a href="<%=new_post_url%>">Make a New Post!</a>

<ul>
    <% @sub.posts.each do |post| %>
        <li><a href="<%= post_url(post) %>"><%= post.title %></a></li> 
    <% end %>
</ul>

<% if current_user.id == @sub.moderator_id %>
    <a href="<%= edit_sub_url(@sub) %>">Edit Link</a>
<% end %>