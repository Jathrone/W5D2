<h3>New Comment!</h3>

<form action="<%= comments_url %>" method="post">
    <%= auth_token %> 
    <input type="hidden" name="comment[post_id]" value="<%= params[:post_id]%>">
    <label>
        <textarea name="comment[content]" cols="30" rows="10"></textarea>
    </label>
    <input type="submit" value="Submit">
</form>